@model IEnumerable<WebApplication5.Models.Question>

@{
    ViewBag.Title = "Index";
}
	<head>
		<link rel="stylesheet" href="@Url.Content("~/Content/mystyle.css")" />

	</head>


<p style="margin-top:50px;">
    @Html.ActionLink("Tests", "Index","Tests",new { id = @Session["courseId"] } ,null)
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.qText)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.op1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.op2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.op3)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.op4)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ans)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.qText)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.op1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.op2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.op3)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.op4)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ans)
        </td>
		<td>
			@Html.ActionLink("Edit", "Edit", new { id = item.qId }) &nbsp;&nbsp;&nbsp;&nbsp;
			@Html.ActionLink("Delete", "Delete", new { id = item.qId })
		</td>
    </tr>
}

</table>
